islands-input-height = 2.25em;
islands-input-padding = 0.825em;
islands-input-border-width = 0.09em;

islands-track-height = islands-input-height - (islands-input-padding + islands-input-border-width) * 2;

islands-track-bg = linear-gradient(#ccc, #ddd);
islands-track-fill =  linear-gradient(#ffdb4d, #ffdb4d) no-repeat;

islands-thumb-d = 1.1em;

track(fill = true) {
  height: islands-track-height;
  border-radius: (islands-track-height / 4);
  background: islands-track-bg;

if fill {
  background: islands-track-fill, islands-track-bg;
  background-size: 50% 100%;
}

}

thumb() {
  box-sizing: border-box;
  border: solid islands-input-border-width #ffdb4d;
  width: islands-thumb-d;
  height: islands-thumb-d;
  border-radius: 50%;
  background: #fff;
  box-shadow: inset 0 0 0.3em #ffdb4d;
}

.range_theme_islands

  .range__control {

    position: relative;
    padding: 0 islands-input-padding;
    height: islands-input-height;
    border: solid islands-input-border-width #e4e4e4;
    border-radius: (islands-input-height / 8);
    background: linear-gradient(#fcfcfc, #eee) border-box;
    cursor: pointer;

    &,
    &::-webkit-slider-runnable-track,
    &::-webkit-slider-thumb {
      -webkit-appearance: none;
    }
    &::-webkit-slider-runnable-track {
      track();
    }
    &::-webkit-slider-thumb {
      margin-top: ((islands-track-height - islands-thumb-d) / 2);
      thumb();
    }

    &::-moz-range-track {
      track();
    }

    &::-moz-range-thumb {
      thumb();
    }

    &::-ms-track {
      color: transparent;
      border: none;
      track(false);
    }
    &::-ms-thumb {
      thumb();
    }
    &::-ms-fill-lower {
      border-radius: islands-track-height;
      background: islands-track-fill;
    }
    &::-ms-tooltip {
      display: none;
    }

    &:focus {
      outline: none;
      box-shadow: 0 0 1em #ffdb4d;

      &::-webkit-slider-thumb {
         box-shadow: 0 0 1em #ffdb4d;
      }
      &::-moz-range-thumb {
         box-shadow: 0 0 1em #ffdb4d;
      }
      &::-ms-thumb {
         box-shadow: 0 0 1em #ffdb4d;
      }
    }

  }

  .range__value_type_static {
    border: solid islands-input-border-width #e4e4e4;
    background: #fff;
    border-radius: 3px;
    padding: 2px 5px;
    min-width: 28px;
    box-sizing: border-box;
    text-align: center;

    /* STYLES FOR LEFT ARROW  */

    &:after,
    &:before {
      right: 100%;
      top: 50%;
      border: solid transparent;
      content: " ";
      height: 0;
      width: 0;
      position: absolute;
      pointer-events: none;
    }

    &:after {
      border-color: transparent;
      border-right-color: #fff;
      border-width: 5px;
      margin-top: -5px;
    }

    &:before {
      border-color: transparent;
      border-right-color: #e4e4e4;
      border-width: 6px;
      margin-top: -6px;
    }
  }

  .range__value_type_tooltip {
    border: 1px solid #e4e4e4;
    background: #fff;
    border-radius: 3px;
    padding: 2px 5px;
    min-width: 28px;
    box-sizing: border-box;
    text-align: center;
    box-shadow: 0 0 1em #ffdb4d;

    &:after,
    &:before {
      bottom: 100%;
      left: 50%;
      border: solid transparent;
      content: " ";
      height: 0;
      width: 0;
      position: absolute;
      pointer-events: none;
    }

    &:after {
      border-color: transparent;
      border-bottom-color: #fff;
      border-width: 5px;
      margin-left: -5px;
    }

    &:before {
      border-color: transparent;
      border-bottom-color: #e4e4e4;
      border-width: 6px;
      margin-left: -6px;
    }
  }

